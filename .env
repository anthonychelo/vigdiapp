# ============================================================
#  ViGDiM — Variables d'environnement
#  Copier ce fichier en .env et remplir les valeurs
# ============================================================

# --- Django Core ---
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# --- Base de données (SQLite par défaut, PostgreSQL en prod) ---
# DATABASE_URL=postgres://user:password@localhost:5432/videgrenier

# --- Stockage des médias ---
# LOCAL  : les photos sont stockées sur le serveur (par défaut)
# S3     : les photos sont stockées sur AWS S3
MEDIA_STORAGE=local

# --- AWS S3 (remplir si MEDIA_STORAGE=s3) ---
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=videgrenier-media
AWS_S3_REGION_NAME=eu-west-1
AWS_S3_CUSTOM_DOMAIN=

# --- Email (pour notifications) ---
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
